@model Finances.WebApp.Models.OrcamentoViewModel

@{
    ViewBag.Title = "Orçamentos";
}


<h2>Orçamentos</h2>
<br />

<table class="table">
    <tr>
        <td>
            Orçamento Geral
        </td>
        <td>
            @Html.DisplayFor(model => Model.Valor)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@Model.ID">Editar</a>
        </td>
    </tr>
</table>
<br />

<h3>Orçamentos por Categoria</h3>
<p><a asp-action="CreateOrcamentoCategoria" asp-route-orcamentoID="@Model.ID">Criar Novo</a></p>
<br />

<table class="table">
    <tr>
        <th>
            Categoria
        </th>
        <th>
            Valor
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.OrcamentosCategoria)
    {
        <tr>
            <td style="Color: @item.Categoria.Cor">
                @Html.DisplayFor(modelItem => item.Categoria.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                <a asp-action="EditOrcamentoCategoria" asp-route-orcamentoCategoriaID="@item.ID">Editar</a> |
                <a asp-action="DeleteOrcamentoCategoria" asp-route-orcamentoCategoriaID="@item.ID" onclick="return confirm('Deseja apagar o orçamento para \'@item.Categoria\' ?');">Apagar</a>
            </td>
        </tr>
    }

</table>
<br />