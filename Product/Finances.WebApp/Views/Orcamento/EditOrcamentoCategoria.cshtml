@model Finances.WebApp.Models.OrcamentoCategoriaViewModel

@{
    ViewBag.Title = "Editar Orçamento Categoria";
}

<h2>Orçamento Categoria</h2>
<h3>Editar</h3>
<hr />

<form asp-controller="Orcamento" asp-action="EditOrcamentoCategoria" method="post" class="form-horizontal">
    <div asp-validaion-summary="ValidationSummary.All" class="text-danger"></div>

    <input asp-for="ID" type="hidden" readonly />

    <div class="form-group">
        <label asp-for="Categoria" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Categoria.ID" type="hidden" readonly />
            <input asp-for="Categoria.Nome" class="form-control" readonly />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Valor" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Valor" class="form-control" />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar" class="btn btn-default" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Index"><i class="glyphicon glyphicon-menu-left"></i> Voltar</a>
</div>