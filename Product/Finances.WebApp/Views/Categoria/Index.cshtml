@model IEnumerable<Finances.WebApp.Models.CategoriaViewModel>

@{
    ViewBag.Title = "Categorias";
}

<h2>Categorias</h2>

<p><a asp-action="Create"><i class="glyphicon glyphicon-edit"></i> Criar Nova</a></p>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="Color: @item.Cor">
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" title="Editar"><i class="glyphicon glyphicon-pencil"></i></a>
                &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
                <a asp-action="Delete" asp-route-id="@item.ID" onclick="return confirm('Deseja apagar a categoria \'@item.Nome\' ?');" title="Apagar"><i class="glyphicon glyphicon-remove"></i></a>
            </td>
        </tr>
    }

</table>
<br />