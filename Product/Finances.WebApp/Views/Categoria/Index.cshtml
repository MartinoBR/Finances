@model IEnumerable<Finances.WebApp.Models.CategoriaViewModel>

@{
    ViewBag.Title = "Categorias";
}

<h2>Categorias</h2>

<p><a asp-action="Create"><i class="glyphicon glyphicon-edit"></i> Criar Nova</a></p>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>Pai</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.Pai != null)
                {
                    <span class="badge badge-pill" style="background-color: @item.Pai.Cor">
                    @if(!String.IsNullOrEmpty(item.Pai.Icone))
                    {
                        <i class="glyphicon glyphicon-@item.Pai.Icone"></i>@:&nbsp;
                    }
                    </span>
                }
                <span class="badge badge-pill categoria align-middle" style="background-color: @item.Cor">
                    @if(!String.IsNullOrEmpty(item.Icone))
                    {
                        <i class="glyphicon glyphicon-@item.Icone"></i>@:&nbsp;
                    }
                    @Html.DisplayFor(modelItem => item.Nome)
                </span>
            </td>
            <td>
                @if(item.Pai != null)
                {
                    <span class="badge badge-pill categoria align-middle" style="background-color: @item.Pai.Cor">
                    @if(!String.IsNullOrEmpty(item.Pai.Icone))
                    {
                        <i class="glyphicon glyphicon-@item.Pai.Icone"></i>@:&nbsp;
                    }
                    @Html.DisplayFor(modelItem => item.Pai.Nome)
                    </span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" title="Editar"><i class="glyphicon glyphicon-pencil"></i></a>
                &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
                <a asp-action="Delete" asp-route-id="@item.ID" onclick="return confirm('Deseja apagar a categoria \'@item.Nome\' ?');" title="Apagar"><i class="glyphicon glyphicon-remove"></i></a>
            </td>
        </tr>
    }

</table>
<br />