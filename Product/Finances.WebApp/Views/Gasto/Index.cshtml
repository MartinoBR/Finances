@model IEnumerable<Finances.WebApp.Models.GastoViewModel>

<h2>@ViewBag.Title</h2>

<p><a asp-action="Create"><i class="glyphicon glyphicon-edit"></i> Lançar Gasto</a></p>
<br />

<table class="table">
    <tr>
        <th>
            Dia
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observacao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Data.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td style="Color: @item.Categoria.Cor">
                @Html.DisplayFor(modelItem => item.Categoria.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" title="Editar"><i class="glyphicon glyphicon-pencil"></i></a>
                &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
                <a asp-action="Delete" asp-route-id="@item.ID" 
                    onclick="return confirm('Deseja apagar o gasto do dia @item.Data.Day no valor R$@item.Valor ?');" title="Apagar"><i class="glyphicon glyphicon-remove"></i></a>
            </td>
        </tr>
    }

</table>
<br />