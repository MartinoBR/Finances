@model Finances.WebApp.Models.GastoViewModel

@{
    ViewBag.Title = "Editar Gasto";
}

<h2>Gasto</h2>
<h3>Editar</h3>
<hr />

<form asp-controller="Gasto" asp-action="Edit" method="post" class="form-horizontal">
    <div asp-validaion-summary="ValidationSummary.All" class="text-danger"></div>

    <input asp-for="ID" type="hidden" readonly />

    <div class="form-group">
        <label asp-for="Data" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Data" min="@Model.MinDate" max="@Model.MaxDate" class="form-control" />
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Valor" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Valor" class="form-control" />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <label asp-for="Observacao" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Observacao" class="form-control" />
            <span asp-validation-for="Observacao" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Categoria" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="Categoria.ID" asp-items="Model.Categorias" class="form-control"></select> 
            <span asp-validation-for="Categoria" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar" class="btn btn-default" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Index"><i class="glyphicon glyphicon-menu-left"></i> Voltar</a>
</div>