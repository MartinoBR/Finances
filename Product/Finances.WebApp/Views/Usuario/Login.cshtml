@model Finances.WebApp.Models.LoginViewModel

@{
    ViewBag.Title =  "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2>Login</h2>
<hr />

<form asp-controller="Usuario" asp-action="Login" method="post" class="form-horizontal">
    <div asp-validaion-summary="ValidationSummary.All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Login" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Login" class="form-control" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Senha" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Senha" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Logar" class="btn btn-default" />
        </div>
    </div>
</form>